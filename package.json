{
    "name": "heroku-boilerplate",
    "version": "1.0.0",
    "description": "",
    "main": "src/app.ts",
    "scripts": {
        "start": "node dist/app.js",
        "dev": "concurrently -n client,server -c blue,green \"npm run dev:client\" \"npm run dev:server\"",
        "dev:client": "npm run start --prefix ./client",
        "dev:server": "nodemon --watch 'src/**/*.ts' --exec \"./node_modules/.bin/ts-node\" src/app.ts",
        "build": "npm run build:server && npm run build:client",
        "build:client": "cd client && npm install && npm run build",
        "build:server": "tsc -p .",
        "postbuild": "rm -rf dist/public && cp -r client/build dist/public"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "apollo-server-express": "^2.21.0",
        "bcrypt": "^5.0.0",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "pg": "^8.5.1",
        "pg-hstore": "^2.3.3",
        "sequelize": "^6.5.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.9",
        "@types/express": "^4.17.11",
        "@types/fs-extra": "^9.0.6",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/node": "^14.14.22",
        "@types/passport": "^1.0.5",
        "@types/passport-jwt": "^3.0.4",
        "@types/passport-local": "^1.0.33",
        "@types/sequelize": "^4.28.9",
        "concurrently": "^5.3.0",
        "nodemon": "^2.0.7",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
    }
}
